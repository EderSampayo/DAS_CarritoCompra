<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilo para la barra de navegación con fondo blanco -->
    <style name="NavbarBlanca" parent="Theme.AppCompat">
        <item name="android:background">@android:color/white</item>
    </style>

    <!-- Estilo para la barra de navegación con fondo oscuro -->
    <style name="NavbarOscura" parent="Theme.AppCompat">
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="ModoClaro" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ModoOscuro" parent="Theme.AppCompat">
        <item name="android:windowBackground">#333333</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
