<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ModoClaro" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="toolbarStyle">@style/ToolbarModoClaro</item>
    </style>

    <style name="ModoOscuro" parent="Theme.AppCompat">
        <item name="android:windowBackground">#333333</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="toolbarStyle">@style/ToolbarModoOscuro</item>
    </style>

    <style name="ToolbarModoClaro" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">#EFEFEF</item>
    </style>

    <style name="ToolbarModoOscuro" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">#1E1E1E</item>
    </style>

</resources>
