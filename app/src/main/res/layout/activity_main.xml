        android:layout_marginTop="16dp"/>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btnAnadirProducto"
        android:layout_marginTop="16dp"/>
</RelativeLayout>
